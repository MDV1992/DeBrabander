@model IEnumerable<DeBrabander.Models.Address>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StreetName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StreetNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Box)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StreetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Box)
            </td>

            <td>
                <abbr title="Adres aanpassen">
                    <a href="@Url.Action("Edit", "Addresses", new { id = item.AddressId })" class="btn btn-primary toggle-more-detail">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                </abbr>
                <abbr title="Overzicht adresgegevens">
                    <a href="@Url.Action("Details", "Addresses", new { id = item.AddressId })" class="btn btn-info toggle-more-detail">
                        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                    </a>
                </abbr>
                <abbr title="Adres verwijderen">
                    <a href="@Url.Action("Delete", "Addresses", new { id = item.AddressId })" class="btn btn-danger toggle-more-detail">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </a>
                </abbr>
            </td>
        </tr>
    }

</table>
