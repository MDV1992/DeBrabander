                @Html.ValidationMessageFor(model => model.quotation.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.quotation.ExpirationDate, htmlAttributes: new { @class = "control-label col-md-2" })
